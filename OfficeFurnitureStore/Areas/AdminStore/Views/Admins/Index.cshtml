@model IEnumerable<OfficeFurnitureStore.Models.Admin>

@{
    ViewData["Title"] = "Quản lý Quản trị viên";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div>
    <h1 class="mb-4 text-primary"><i class="bi bi-person-gear me-2"></i> Quản lý Quản trị viên</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-square-fill me-2"></i> Thêm mới</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="bg-primary text-white">
                <tr>
                    <th>
                        <i class="bi bi-person-badge-fill me-2"></i> @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        <i class="bi bi-key-fill me-2"></i> @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        <i class="bi bi-person-fill me-2"></i> @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        <i class="bi bi-envelope-fill me-2"></i> @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        <i class="bi bi-telephone-fill me-2"></i> @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th class="text-center"><i class="bi bi-gear-fill me-2"></i> Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.AdminId" class="btn btn-sm btn-warning"><i class="bi bi-pencil-square me-1"></i> Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.AdminId" class="btn btn-sm btn-info ms-2"><i class="bi bi-info-circle-fill me-1"></i> Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.AdminId" class="btn btn-sm btn-danger ms-2"><i class="bi bi-trash-fill me-1"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .btn-success {
        background-color: #28a745; /* Màu xanh lá cây mặc định của Bootstrap */
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-primary {
        background-color: #3a3f58;
        border-color: #3a3f58;
    }

        .btn-primary:hover {
            background-color: #282c40;
            border-color: #25283c;
        }

    .bg-primary {
        background-color: #3a3f58 !important;
    }

    .text-primary {
        color: #3a3f58 !important;
    }
</style>