@model OfficeFurnitureStore.Models.Customer

@{
    ViewData["Title"] = "Đăng Ký Khách Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Font Awesome CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Custom CSS -->
<style>
    :root {
        --primary-color: #3a3f58;
        --accent-color: #e45441;
        --text-color: #ffffff;
    }

    body {
        background-color: #f8f9fa;
    }

    .register-section {
        background: linear-gradient(rgba(58, 63, 88, 0.8), rgba(58, 63, 88, 0.8)), url('/images/about-img.jpg') no-repeat center center;
        background-size: cover;
        color: var(--text-color);
        padding: 60px 0;
        text-align: center;
        margin-bottom: 40px;
    }

        .register-section h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .register-section p {
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto;
        }

    .form-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 40px;
    }

    .input-group-text {
        background-color: transparent;
        border: none;
        color: var(--primary-color);
        font-weight: 600;
        width: 200px;
        justify-content: flex-start;
    }

        .input-group-text .fa-icon {
            color: var(--accent-color);
            margin-right: 8px;
        }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 5px rgba(228, 84, 65, 0.3);
        }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .btn-accent {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: var(--text-color);
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-accent:hover {
            background-color: #c43c2f;
            border-color: #c43c2f;
        }

    .back-link {
        color: var(--accent-color);
        text-decoration: none;
        font-weight: 500;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .fa-icon {
        margin-right: 8px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    @@media (max-width: 768px) {
        .register-section h1

    {
        font-size: 2rem;
    }

    .register-section p {
        font-size: 1rem;
    }

    .form-container {
        padding: 20px;
    }

    .input-group {
        flex-direction: column;
        align-items: stretch;
    }

    .input-group-text {
        width: auto;
        margin-bottom: 5px;
    }

    }
</style>

<!-- Hero Section -->
<section class="register-section">
    <div class="container">
        <h1><i class="fas fa-user-plus fa-icon"></i> Đăng Ký Khách Hàng</h1>
        <p>Tạo tài khoản để khám phá và mua sắm các sản phẩm nội thất văn phòng hiện đại, tối ưu hóa không gian làm việc của bạn.</p>
    </div>
</section>

<!-- Registration Form Section -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-container">
                <h4><i class="fas fa-user fa-icon"></i> Tạo Tài Khoản Mới</h4>
                <hr />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-user fa-icon"></i> Tên Người Dùng</span>
                        <input asp-for="Username" class="form-control" placeholder="Nhập tên người dùng" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-lock fa-icon"></i> Mật Khẩu</span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-id-card fa-icon"></i> Họ và Tên</span>
                        <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-at fa-icon"></i> Email</span>
                        <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-phone fa-icon"></i> Số Điện Thoại</span>
                        <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-map-marker-alt fa-icon"></i> Địa Chỉ</span>
                        <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-image fa-icon"></i> Ảnh Đại Diện</span>
                        <input asp-for="Avatar" type="file" class="form-control" />
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between align-items-center">
                        <a asp-controller="Home" asp-action="Index" class="back-link"><i class="fas fa-arrow-left fa-icon"></i> Quay Lại Trang Chủ</a>
                        <input type="submit" value="Đăng Ký" class="btn btn-accent" />
                       
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a asp-controller="LoginC" asp-action="Index" class="back-link"><i class="fas fa-sign-in-alt fa-icon"></i> Đã có tài khoản? Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}