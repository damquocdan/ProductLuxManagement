@model OfficeFurnitureStore.Models.Product

@{
    ViewData["Title"] = "Chi tiết Sản phẩm Nội thất";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4 text-primary"><i class="fas fa-info-circle me-2"></i> Chi tiết Sản phẩm Nội thất</h1>

    <hr class="border-primary mb-4" />

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title"><i class="fas fa-couch me-2"></i> Thông tin Sản phẩm</h4>
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold"><i class="fas fa-couch me-2"></i> Tên Sản phẩm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-align-left me-2"></i> Mô tả</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-dollar-sign me-2"></i> Giá</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-warehouse me-2"></i> Số lượng tồn kho</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StockQuantity)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-shopping-cart me-2"></i> Số lượng đã đặt</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderedQuantity)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-toggle-on me-2"></i> Trạng thái</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-image me-2"></i> Hình ảnh</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" alt="@Model.ProductName" class="img-fluid" style="max-width: 200px; max-height: 200px; object-fit: cover; border-radius: 4px;" />
                    }
                    else
                    {
                        <span>Không có hình ảnh</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-folder me-2"></i> Danh mục</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-warning"><i class="fas fa-edit me-2"></i> Sửa thông tin</a>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left me-2"></i> Quay lại danh sách</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .container-fluid {
        padding: 20px;
    }

    .text-primary {
        color: #3a3f58 !important;
    }

    .border-primary {
        border-color: #3a3f58 !important;
        border-width: 2px;
    }

    .btn-warning {
        background-color: #f4a261;
        border-color: #f4a261;
    }

        .btn-warning:hover {
            background-color: #e68a41;
            border-color: #e68a41;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .card {
        border: none;
        border-radius: 8px;
        background-color: #fff;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        color: #3a3f58;
        margin-bottom: 15px;
    }

    .row dt, .row dd {
        padding: 10px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .row dt {
        color: #3a3f58;
    }

    .row dd {
        color: #495057;
    }

    .img-fluid {
        border-radius: 4px;
    }
</style>