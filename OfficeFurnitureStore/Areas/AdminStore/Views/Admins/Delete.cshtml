@model OfficeFurnitureStore.Models.Admin

@{
    ViewData["Title"] = "Xóa Quản trị viên";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div>
    <h1 class="mb-4 text-danger"><i class="bi bi-trash-fill me-2"></i> Xóa Quản trị viên</h1>

    <h3>Bạn có chắc chắn muốn xóa quản trị viên này không?</h3>

    <hr class="border-danger mb-4" />

    <div>
        <h4>Thông tin Quản trị viên</h4>
        <dl class="row">
            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-badge-fill me-2"></i> Tên đăng nhập</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-key-fill me-2"></i> Mật khẩu</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-fill me-2"></i> Họ và tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-envelope-fill me-2"></i> Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-telephone-fill me-2"></i> Số điện thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="AdminId" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill me-2"></i> Xóa</button>
            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Quay lại danh sách</a>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .text-danger {
        color: #e45441 !important;
    }

    .border-danger {
        border-color: #e45441 !important;
        border-width: 2px;
    }

    .btn-danger {
        background-color: #e45441;
        border-color: #e45441;
    }

        .btn-danger:hover {
            background-color: #c84131;
            border-color: #c84131;
        }

    .btn-secondary {
        background-color: #6c757d; /* Màu xám mặc định của Bootstrap */
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>