@model OfficeFurnitureStore.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa Sản phẩm Nội thất";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4 text-primary"><i class="fas fa-couch me-2"></i> Chỉnh sửa Sản phẩm Nội thất</h1>

    <hr class="border-primary mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="ProductId" />

                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label"><i class="fas fa-couch me-2"></i> Tên Sản phẩm</label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"><i class="fas fa-align-left me-2"></i> Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"><i class="fas fa-dollar-sign me-2"></i> Giá</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StockQuantity" class="form-label"><i class="fas fa-warehouse me-2"></i> Số lượng tồn kho</label>
                            <input asp-for="StockQuantity" class="form-control" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrderedQuantity" class="form-label"><i class="fas fa-shopping-cart me-2"></i> Số lượng đã đặt</label>
                            <input asp-for="OrderedQuantity" class="form-control" />
                            <span asp-validation-for="OrderedQuantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label"><i class="fas fa-folder me-2"></i> Danh mục</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"><i class="fas fa-toggle-on me-2"></i> Trạng thái</label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label"><i class="fas fa-image me-2"></i> Hình ảnh</label>
                            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <div class="mt-2">
                                    <img src="@Model.Image" alt="Current Image" class="img-fluid" style="max-width: 100px; max-height: 100px; object-fit: cover;" />
                                </div>
                            }
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i> Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left me-2"></i> Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .container-fluid {
        padding: 20px;
    }

    .text-primary {
        color: #3a3f58 !important;
    }

    .border-primary {
        border-color: #3a3f58 !important;
        border-width: 2px;
    }

    .btn-primary {
        background-color: #3a3f58;
        border-color: #3a3f58;
    }

        .btn-primary:hover {
            background-color: #2a2f44;
            border-color: #2a2f44;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .text-danger {
        color: #e45441 !important;
    }

    .card {
        border: none;
        border-radius: 8px;
        background-color: #fff;
    }

    .card-body {
        padding: 20px;
    }

    .form-control {
        border-color: #3a3f58;
    }

        .form-control:focus {
            border-color: #e45441;
            box-shadow: 0 0 5px rgba(228, 84, 65, 0.5);
        }

    .form-label {
        font-weight: 500;
        color: #3a3f58;
    }

    .img-fluid {
        border-radius: 4px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}