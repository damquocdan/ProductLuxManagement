@model OfficeFurnitureStore.Models.Admin

@{
    ViewData["Title"] = "Chi tiết Quản trị viên";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div>
    <h1 class="mb-4 text-primary"><i class="bi bi-info-circle-fill me-2"></i> Chi tiết Quản trị viên</h1>

    <hr class="border-primary mb-4" />

    <div>
        <dl class="row">
            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-badge-fill me-2"></i> Tên đăng nhập</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-key-fill me-2"></i> Mật khẩu</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-person-fill me-2"></i> Họ và tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-envelope-fill me-2"></i> Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-bold"><i class="bi bi-telephone-fill me-2"></i> Số điện thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.AdminId" class="btn btn-warning"><i class="bi bi-pencil-square-fill me-2"></i> Sửa</a>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left-circle-fill me-2"></i> Quay lại danh sách</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    .text-primary {
        color: #3a3f58 !important;
    }

    .border-primary {
        border-color: #3a3f58 !important;
        border-width: 2px;
    }

    .btn-warning {
        background-color: #ffc107; /* Giữ màu vàng mặc định của Bootstrap warning */
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-secondary {
        background-color: #6c757d; /* Màu xám mặc định của Bootstrap */
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>