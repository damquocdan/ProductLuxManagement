@model OfficeFurnitureStore.Models.Product

@{
    ViewData["Title"] = "Xóa Sản phẩm";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4 text-danger"><i class="fas fa-trash-alt me-2"></i> Xóa Sản phẩm</h1>

    <h3>Bạn có chắc chắn muốn xóa sản phẩm này không?</h3>

    <hr class="border-danger mb-4" />

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title"><i class="fas fa-box me-2"></i> Thông tin Sản phẩm</h4>
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold"><i class="fas fa-tag me-2"></i> Tên sản phẩm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-align-left me-2"></i> Mô tả</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-dollar-sign me-2"></i> Giá</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-boxes me-2"></i> Số lượng kho</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StockQuantity)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-truck me-2"></i> Số lượng đã đặt</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderedQuantity)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-check-circle me-2"></i> Trạng thái</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-image me-2"></i> Hình ảnh</dt>
                <dd class="col-sm-9">
                    <img src="@Html.DisplayFor(model =>model.Image)" alt="Hình ảnh sản phẩm" style="max-width: 200px; max-height: 200px;" />
                </dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-layer-group me-2"></i> Danh mục</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i> Xóa Sản phẩm</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left me-2"></i> Quay lại danh sách</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .container-fluid {
        padding: 20px;
    }

    .text-danger {
        color: #e45441 !important;
    }

    .border-danger {
        border-color: #e45441 !important;
        border-width: 2px;
    }

    .btn-danger {
        background-color: #e45441;
        border-color: #e45441;
    }

        .btn-danger:hover {
            background-color: #c63a2e;
            border-color: #c63a2e;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .card {
        border: none;
        border-radius: 8px;
        background-color: #fff;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        color: #3a3f58;
        margin-bottom: 15px;
    }

    .row dt, .row dd {
        padding: 10px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .row dt {
        color: #3a3f58;
    }

    .row dd {
        color: #495057;
    }
</style>
