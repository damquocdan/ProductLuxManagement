@model IEnumerable<OfficeFurnitureStore.Models.Partner>

@{
    ViewData["Title"] = "Danh sách Đối tác";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4 text-primary"><i class="fas fa-handshake me-2"></i> Danh sách Đối tác</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle me-2"></i> Thêm Đối tác</a>
    </p>

    <div class="table-responsive card shadow-sm">
        <table class="table table-bordered table-hover mb-0">
            <thead style="background-color: #3a3f58; color: white;">
                <tr>
                    <th><i class="fas fa-building me-2"></i> Tên Đối tác</th>
                    <th><i class="fas fa-user-tie me-2"></i> Người liên hệ</th>
                    <th><i class="fas fa-envelope me-2"></i> Email</th>
                    <th><i class="fas fa-phone me-2"></i> Số điện thoại</th>
                    <th><i class="fas fa-map-marker-alt me-2"></i> Địa chỉ</th>
                    <th class="text-center"><i class="fas fa-tools me-2"></i> Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PartnerName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ContactPerson)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.PartnerId" class="btn btn-sm btn-warning"><i class="fas fa-edit me-1"></i> Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.PartnerId" class="btn btn-sm btn-info ms-2"><i class="fas fa-info-circle me-1"></i> Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.PartnerId" class="btn btn-sm btn-danger ms-2"><i class="fas fa-trash-alt me-1"></i> Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .container-fluid {
        padding: 20px;
    }

    .btn-success {
        background-color: #e45441;
        border-color: #e45441;
    }

        .btn-success:hover {
            background-color: #c63a2e;
            border-color: #c63a2e;
        }

    .btn-warning {
        background-color: #f4a261;
        border-color: #f4a261;
    }

        .btn-warning:hover {
            background-color: #e68a41;
            border-color: #e68a41;
        }

    .btn-info {
        background-color: #6ab0de;
        border-color: #6ab0de;
    }

        .btn-info:hover {
            background-color: #4a9bc9;
            border-color: #4a9bc9;
        }

    .btn-danger {
        background-color: #d00000;
        border-color: #d00000;
    }

        .btn-danger:hover {
            background-color: #b00000;
            border-color: #b00000;
        }

    .text-primary {
        color: #3a3f58 !important;
    }

    .table-hover tbody tr:hover {
        background-color: #f8e7e5;
    }

    .table {
        background-color: #fff;
        border-radius: 8px;
    }

    th, td {
        vertical-align: middle !important;
    }

    .card {
        border: none;
        border-radius: 8px;
    }
</style>
