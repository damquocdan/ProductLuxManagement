@model OfficeFurnitureStore.Models.Product

@{
    ViewData["Title"] = "Thêm mới Sản phẩm";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4 text-primary"><i class="fas fa-plus me-2"></i> Thêm mới Sản phẩm</h1>

    <hr class="border-primary mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label"><i class="fas fa-tag me-2"></i> Tên sản phẩm</label>
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"><i class="fas fa-align-left me-2"></i> Mô tả</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"><i class="fas fa-dollar-sign me-2"></i> Giá</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StockQuantity" class="form-label"><i class="fas fa-boxes me-2"></i> Số lượng tồn</label>
                            <input asp-for="StockQuantity" class="form-control" />
                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label"><i class="fas fa-list me-2"></i> Danh mục</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"><i class="fas fa-toggle-on me-2"></i> Trạng thái</label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label"><i class="fas fa-image me-2"></i> Hình ảnh</label>
                            <input asp-for="Image" class="form-control" type="file" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-success"><i class="fas fa-plus-circle me-2"></i> Thêm mới</button>
                            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left me-2"></i> Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .container-fluid {
        padding: 20px;
    }

    .text-primary {
        color: #3a3f58 !important;
    }

    .border-primary {
        border-color: #3a3f58 !important;
        border-width: 2px;
    }

    .btn-success {
        background-color: #e45441;
        border-color: #e45441;
    }

        .btn-success:hover {
            background-color: #c63a2e;
            border-color: #c63a2e;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .text-danger {
        color: #e45441 !important;
    }

    .card {
        border: none;
        border-radius: 8px;
        background-color: #fff;
    }

    .card-body {
        padding: 20px;
    }

    .form-control {
        border-color: #3a3f58;
    }

        .form-control:focus {
            border-color: #e45441;
            box-shadow: 0 0 5px rgba(228, 84, 65, 0.5);
        }

    .form-label {
        font-weight: 500;
        color: #3a3f58;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
