@model OfficeFurnitureStore.Models.Comment

@{
    ViewData["Title"] = "Chi tiết Bình luận";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4 text-primary"><i class="fas fa-info-circle me-2"></i> Chi tiết Bình luận</h1>

    <hr class="border-primary mb-4" />

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title"><i class="fas fa-comment me-2"></i> Thông tin Bình luận</h4>
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold"><i class="fas fa-comment me-2"></i> Nội dung</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-calendar-alt me-2"></i> Ngày tạo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-user me-2"></i> Khách hàng</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.FullName)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-couch me-2"></i> Sản phẩm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.ProductName)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left me-2"></i> Quay lại danh sách</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .container-fluid {
        padding: 20px;
    }

    .text-primary {
        color: #3a3f58 !important;
    }

    .border-primary {
        border-color: #3a3f58 !important;
        border-width: 2px;
    }

    .btn-warning {
        background-color: #f4a261;
        border-color: #f4a261;
    }

        .btn-warning:hover {
            background-color: #e68a41;
            border-color: #e68a41;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .card {
        border: none;
        border-radius: 8px;
        background-color: #fff;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        color: #3a3f58;
        margin-bottom: 15px;
    }

    .row dt, .row dd {
        padding: 10px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .row dt {
        color: #3a3f58;
    }

    .row dd {
        color: #495057;
    }
</style>