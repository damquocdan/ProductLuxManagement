@model OfficeFurnitureStore.Models.Admin

@{
    ViewData["Title"] = "Xóa Quản trị viên";
    Layout = "~/Areas/AdminStore/Views/Shared/Admin.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4 text-danger"><i class="fas fa-trash-alt me-2"></i> Xóa Quản trị viên</h1>

    <h3>Bạn có chắc chắn muốn xóa quản trị viên này không?</h3>

    <hr class="border-danger mb-4" />

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title"><i class="fas fa-user-cog me-2"></i> Thông tin Quản trị viên</h4>
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold"><i class="fas fa-user-shield me-2"></i> Tên đăng nhập</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-lock me-2"></i> Mật khẩu</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-user me-2"></i> Họ và tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-envelope me-2"></i> Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold"><i class="fas fa-phone me-2"></i> Số điện thoại</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="AdminId" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i> Xóa Quản trị viên</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left me-2"></i> Quay lại danh sách</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .container-fluid {
        padding: 20px;
    }

    .text-danger {
        color: #e45441 !important;
    }

    .border-danger {
        border-color: #e45441 !important;
        border-width: 2px;
    }

    .btn-danger {
        background-color: #e45441;
        border-color: #e45441;
    }

        .btn-danger:hover {
            background-color: #c63a2e;
            border-color: #c63a2e;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .card {
        border: none;
        border-radius: 8px;
        background-color: #fff;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        color: #3a3f58;
        margin-bottom: 15px;
    }

    .row dt, .row dd {
        padding: 10px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .row dt {
        color: #3a3f58;
    }

    .row dd {
        color: #495057;
    }
</style>