<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OfficeFurnitureStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OfficeFurnitureStore.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/images/favicon.png" type="image/gif" />

    <title>Shapel</title>

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700&display=swap" rel="stylesheet" />

    <!-- lightbox Gallery-->
    <link rel="stylesheet" href="~/css/ekko-lightbox.css" />

    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />
</head>
<body>
    <header class="header_section">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <span class="text-dark">Shapel</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Giới thiệu</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Contacts" asp-action="Create">Liên hệ</a></li>

                        <li class="nav-item dropdown">
                            @if (Context.Session.GetString("CustomerLogin") != null)
                            {
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    <span class="d-none d-md-inline">@Context.Session.GetString("CustomerLogin")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Customers" asp-action="Details">Thông tin cá nhân</a></li>
                                    <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">Đơn hàng</a></li>
                                    <li><a class="dropdown-item" asp-controller="Carts" asp-action="Index">Giỏ hàng</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="LoginC" asp-action="Logout">Đăng xuất</a></li>
                                </ul>
                            }
                            else
                            {
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    <span class="d-none d-md-inline">Tài khoản</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="LoginC" asp-action="Index">Đăng nhập</a></li>
                                    <li><a class="dropdown-item" asp-controller="Customers" asp-action="Create">Đăng ký</a></li>
                                </ul>
                            }
                        </li>
                    </ul>
                </div>
            </nav>

        </div>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <section class="info_section">
        <div class="container">
            <div class="row info_main_row">
                <div class="col-md-6 col-lg-3">
                    <div class="info_insta">
                        <h4>
                            <a href="index.html" class="navbar-brand m-0 p-0">
                                <span>
                                    Nội Thất Shapel
                                </span>
                            </a>
                        </h4>
                        <p class="mb-0">
                            Chúng tôi cung cấp các giải pháp nội thất văn phòng chất lượng cao, giúp tối ưu hóa không gian làm việc và nâng cao trải nghiệm của bạn.
                        </p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="info_detail">
                        <h4>
                            Về Doanh Nghiệp
                        </h4>
                        <p class="mb-0">
                            Với nhiều năm kinh nghiệm, chúng tôi cam kết mang đến những sản phẩm và dịch vụ nội thất tốt nhất để đáp ứng nhu cầu của khách hàng.
                        </p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <h4>
                        Thông Tin Liên Hệ
                    </h4>
                    <div class="info_contact">
                        <a href="">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>
                                Địa Chỉ
                            </span>
                        </a>
                        <a href="">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>
                                Gọi +84 1234567890
                            </span>
                        </a>
                        <a href="">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>
                                contact@noithatshapel.com
                            </span>
                        </a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <h4>
                        Kết Nối Với Chúng Tôi
                    </h4>
                    <div class="social_box">
                        <a href="">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-linkedin" aria-hidden="true"></i>
                        </a>
                        <a href="">
                            <i class="fa fa-instagram" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer class="footer_section">
        <div class="container">
            <p>
                &copy; <span id="displayYear"></span> All Rights Reserved By
                <a href="https://html.design/">Free Html Templates</a>
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.js"></script>
    <!-- lightbox Gallery-->
    <script src="~/js/ekko-lightbox.min.js"></script>
    <!-- custom js -->
    <script src="~/js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
