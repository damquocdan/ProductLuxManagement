@model OfficeFurnitureStore.Areas.AdminStore.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .login-title {
            text-align: center;
            margin-bottom: 25px;
            color: #3a3f58;
            font-size: 2rem;
            font-weight: bold;
        }

        .custom-input {
            margin-bottom: 15px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            padding: 12px;
            font-size: 1rem;
        }

        .btn-primary {
            background-color: #e45441;
            border-color: #e45441;
            color: #fff;
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #c84131;
                border-color: #c84131;
            }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            list-style: none;
        }

            .alert-danger ul {
                margin-bottom: 0;
                padding-left: 20px;
            }

            .alert-danger li {
                margin-bottom: 5px;
            }
    </style>
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-box">
                    <div class="login-title"><i class="bi bi-shield-lock-fill me-2"></i> Đăng nhập Quản trị</div>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> Vui lòng kiểm tra lại thông tin đăng nhập:
                            <ul>
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    foreach (var error in modelState.Errors)
                                    {
                                        <li><i class="bi bi-x-octagon-fill me-1"></i> @error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }
                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label"><i class="bi bi-envelope-fill me-2"></i> Email</label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" id="Email"
                                   placeholder="Nhập email quản trị" />
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label"><i class="bi bi-key-fill me-2"></i> Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" id="Password"
                                   placeholder="Nhập mật khẩu" required />
                        </div>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-box-arrow-in-right me-2"></i> Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>